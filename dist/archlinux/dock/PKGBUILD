# Maintainer: SQP <sqp@glx-dock.org>

pkgname=cairo-dock-control
pkgver=20150509
pkgrel=1
pkgdesc="Cairo-Dock control tool and go applets."
arch=('x86_64' 'i686')
url="http://github.com/sqp/godock"
license=('GPL3')
depends=('gtk3' curl' 'gupnp-av' 'gobject-introspection') # also depends on the dock but it's removed so we could use a custom install.
makedepends=('git' 'go')
optdepends=(
  'xclip: clipboard control for uptoshare (NetActivity)'
  'cairo-dock: the dock is mandatory but as optional it allow to use custom installs'
)
options=('!strip' '!emptydirs')

srcpath=github.com/sqp/godock
applets="Audio Cpu DiskActivity DiskFree GoGmail Mem NetActivity Notifications TVPlay Update"
cdctags="dock"
# appdir=usr/share/cairo-dock/plug-ins/goapplets/

build() {
  # Download
  GOPATH="$srcdir" go get -d -u -tags "$applets $cdctags" $srcpath/cmd/cdc

  # Patch  
  cd "$srcdir/src/$srcpath" && GOPATH="$srcdir" make patch

  # Build
  cd "$srcdir/src/$srcpath" && GOPATH="$srcdir" make DOCK="$cdctags $applets" dock
  # GOPATH="$srcdir" go get -fix -v -tags "$applets $cdctags" $srcpath/cmd/cdc # -x 
}

#check() {
#  GOPATH="$GOPATH:$srcdir" go test -v -x $srcpath/...
#}

package() {
  cd "$srcdir/src/$srcpath" && GOPATH="$srcdir" make PKGDIR="$pkgdir" APPLETS="$applets" install


#  mkdir -p "$pkgdir/usr/bin"
